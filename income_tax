# 2024년 기준 근로소득 누진세율표
# 과세표준 (원)          세율(%)
# 0 ~ 12,000,000         6%
# 12,000,000 ~ 46,000,000 15%
# 46,000,000 ~ 88,000,000 24%
# 88,000,000 ~ 150,000,000 35%
# 150,000,000 ~ 300,000,000 38%
# 300,000,000 ~ 500,000,000 40%
# 500,000,000 초과        42%

# 소득 변수 선언
income = 55000000  # 예: 55,000,000원

# 세금 계산
if income <= 12000000:
    tax = income * 0.06
    level = "저소득층"
elif income <= 46000000:
    tax = 12000000 * 0.06 + (income - 12000000) * 0.15
    level = "중간소득층"
elif income <= 88000000:
    tax = 12000000 * 0.06 + (46000000 - 12000000) * 0.15 + (income - 46000000) * 0.24
    level = "고소득층"
elif income <= 150000000:
    tax = (12000000 * 0.06 +
           (46000000 - 12000000) * 0.15 +
           (88000000 - 46000000) * 0.24 +
           (income - 88000000) * 0.35)
    level = "상위소득층"
elif income <= 300000000:
    tax = (12000000 * 0.06 +
           (46000000 - 12000000) * 0.15 +
           (88000000 - 46000000) * 0.24 +
           (150000000 - 88000000) * 0.35 +
           (income - 150000000) * 0.38)
    level = "고소득층"
elif income <= 500000000:
    tax = (12000000 * 0.06 +
           (46000000 - 12000000) * 0.15 +
           (88000000 - 46000000) * 0.24 +
           (150000000 - 88000000) * 0.35 +
           (300000000 - 150000000) * 0.38 +
           (income - 300000000) * 0.40)
    level = "초고소득층"
else:
    tax = (12000000 * 0.06 +
           (46000000 - 12000000) * 0.15 +
           (88000000 - 46000000) * 0.24 +
           (150000000 - 88000000) * 0.35 +
           (300000000 - 150000000) * 0.38 +
           (500000000 - 300000000) * 0.40 +
           (income - 500000000) * 0.42)
    level = "최고소득층"

# 결과 출력
print(f"소득: {income:,}원")
print(f"소득 수준: {level}")
print(f"예상 세금: {tax:,.0f}원")
